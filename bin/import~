    if ($argc != 2)
    {
        print("usage: ./import infile\n");
        exit(1);
    }
    $file = $argv[1];
    if (!file_exists($file))
    {
        print("The file you selected doesn't exist.");
        exit(2);
    }
    if (!is_readable($file))
    {
        print("The file is not readable.\n");
        exit(3);
    }
    $input = @fopen($file, "r");
    if ($input == FALSE)
    {
        print("Couldn't open file.");
        exit(4);
    }
    $counter = 0;
    while (true)
    {
        $csv = fgets($input);
        if(!$csv)
        {
            break;
        }
        $counter++;
        /*$csv = explode("\t",$csv);
        $country_name = $csv[0];
        $postal_code = $csv[1]; 
        $place_name = $csv[2];
        $admin_name1 = $csv[3];
        $admin_code1 = $csv[4];
        $admin_name2 = $csv[5];
        $admin_code2 = $csv[6];
        $admin_name3 = $csv[7];
        $admin_code3 = $csv[8];
        $lat = $csv[9];
        $long = $csv[10];
        $accu = $csv[11];
       
        query("INSERT INTO places (country_code, postal_code, place_name, admin_name1, admin_code1, admin_name2, admin_code2, admin_name3, admin_code3,  
               latitude, longitude, accuracy) VALUES(?, ?, ?, ?, ?, ?, ?, ?, ?, ?, ?, ?)", $country_name, $postal_code, $place_name, $admin_name1, $admin_code1
               , $admin_name2, $admin_code2, $admin_name3, $admin_code3, $lat, $long, $accu);*/
    }
    print($counter."\n");
    fclose($input);
    exit(0);
?>
